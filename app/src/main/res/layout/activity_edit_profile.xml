<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.EditProfileActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.dating.viewmodels.EditProfileViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{viewModel::backPressed}"
                android:padding="@dimen/mediumPadding"
                android:src="@drawable/back" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/edit"
                android:textColor="@color/textColor"
                android:textSize="@dimen/largeTextSize" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineHeight"
            android:background="@color/lightGreyColor" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normalMargin"
            app:cardElevation="@dimen/elevation">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarThumbHorizontal="@null">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normalPadding"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_profile_selected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/photo"
                        android:textColor="@android:color/white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normalMargin"
                        android:background="@drawable/edit_profile_unselected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/the_main"
                        android:textColor="@color/lightTextColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normalMargin"
                        android:background="@drawable/edit_profile_unselected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/interests"
                        android:textColor="@color/lightTextColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normalMargin"
                        android:background="@drawable/edit_profile_unselected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/about_me"
                        android:textColor="@color/lightTextColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normalMargin"
                        android:background="@drawable/edit_profile_unselected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/growth"
                        android:textColor="@color/lightTextColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normalMargin"
                        android:background="@drawable/edit_profile_unselected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/weight"
                        android:textColor="@color/lightTextColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normalMargin"
                        android:background="@drawable/edit_profile_unselected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/sp"
                        android:textColor="@color/lightTextColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normalMargin"
                        android:background="@drawable/edit_profile_unselected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/nationality"
                        android:textColor="@color/lightTextColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normalMargin"
                        android:background="@drawable/edit_profile_unselected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/job"
                        android:textColor="@color/lightTextColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normalMargin"
                        android:layout_marginEnd="@dimen/largeMargin"
                        android:background="@drawable/edit_profile_unselected_background"
                        android:paddingHorizontal="@dimen/normalPadding"
                        android:paddingVertical="@dimen/xSmallMargin"
                        android:text="@string/education"
                        android:textColor="@color/lightTextColor" />
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginHorizontal="@dimen/largeMargin"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/photo"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/smallPhoto"
                        android:layout_height="@dimen/smallPhoto"
                        android:layout_margin="@dimen/normalMargin"
                        app:cardCornerRadius="@dimen/photoRadius"
                        app:cardElevation="@dimen/elevation"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/plus" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/smallPhoto"
                        android:layout_height="@dimen/smallPhoto"
                        android:layout_margin="@dimen/normalMargin"
                        app:cardCornerRadius="@dimen/photoRadius"
                        app:cardElevation="@dimen/elevation"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/plus" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/smallPhoto"
                        android:layout_height="@dimen/smallPhoto"
                        android:layout_margin="@dimen/normalMargin"
                        app:cardCornerRadius="@dimen/photoRadius"
                        app:cardElevation="@dimen/elevation"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/plus" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/smallPhoto"
                        android:layout_height="@dimen/smallPhoto"
                        android:layout_margin="@dimen/normalMargin"
                        app:cardCornerRadius="@dimen/photoRadius"
                        app:cardElevation="@dimen/elevation"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/plus" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/smallPhoto"
                        android:layout_height="@dimen/smallPhoto"
                        android:layout_margin="@dimen/normalMargin"
                        app:cardCornerRadius="@dimen/photoRadius"
                        app:cardElevation="@dimen/elevation"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/plus" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/smallPhoto"
                        android:layout_height="@dimen/smallPhoto"
                        android:layout_margin="@dimen/normalMargin"
                        app:cardCornerRadius="@dimen/photoRadius"
                        app:cardElevation="@dimen/elevation"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/plus" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginVertical="@dimen/largeMargin"
                    android:background="@color/lightGreyColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/the_main"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:text="@string/pol"
                    android:textColor="@color/lightTextColor" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:textColor="@color/textColor" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/xLargeMargin"
                        android:text="@string/female"
                        android:textColor="@color/textColor" />
                </RadioGroup>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:background="@drawable/round_button_unselected"
                    android:hint="@string/name"
                    android:padding="@dimen/normalPadding"
                    android:paddingStart="@dimen/largeMargin"
                    android:singleLine="true"
                    android:text="Анастасия"
                    android:textColor="@color/textColor" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:background="@drawable/round_button_unselected"
                    android:hint="@string/your_dob"
                    android:padding="@dimen/normalPadding"
                    android:paddingStart="@dimen/largeMargin"
                    android:singleLine="true"
                    android:text="20.12.1998"
                    android:textColor="@color/textColor" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:background="@drawable/round_button_unselected"
                    android:hint="@string/location"
                    android:padding="@dimen/normalPadding"
                    android:paddingStart="@dimen/largeMargin"
                    android:singleLine="true"
                    android:text="Москва"
                    android:textColor="@color/textColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginVertical="@dimen/largeMargin"
                    android:background="@color/lightGreyColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/interests"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginVertical="@dimen/largeMargin"
                    android:background="@color/lightGreyColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/about_me"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:background="@drawable/round_button_unselected"
                    android:hint="@string/location"
                    android:padding="@dimen/normalPadding"
                    android:paddingStart="@dimen/largeMargin"
                    android:minLines="8"
                    android:maxLines="10"
                    android:text="Но дальнейшее развитие различных форм дятельности предоставляет широкие дальнейшее развитие различных форм деятельности предоставляет широкиедальнейшее развитие различных форм деятельности предоставляет широкие..."
                    android:textColor="@color/textColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginVertical="@dimen/largeMargin"
                    android:background="@color/lightGreyColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/growth"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:max="100"
                    android:progress="20"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginVertical="@dimen/largeMargin"
                    android:background="@color/lightGreyColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/weight"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:max="100"
                    android:progress="20"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginVertical="@dimen/largeMargin"
                    android:background="@color/lightGreyColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/family_status"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/actively_looking"
                        android:textColor="@color/textColor" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normalMargin"
                        android:text="@string/its_complicated"
                        android:textColor="@color/textColor" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normalMargin"
                        android:text="@string/married"
                        android:textColor="@color/textColor" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginVertical="@dimen/largeMargin"
                    android:background="@color/lightGreyColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/nationality"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginVertical="@dimen/largeMargin"
                    android:background="@color/lightGreyColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/job"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:background="@drawable/round_button_unselected"
                    android:hint="@string/your_dob"
                    android:padding="@dimen/normalPadding"
                    android:paddingStart="@dimen/largeMargin"
                    android:singleLine="true"
                    android:text="Директор"
                    android:textColor="@color/textColor" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:background="@drawable/round_button_unselected"
                    android:hint="@string/your_dob"
                    android:padding="@dimen/normalPadding"
                    android:paddingStart="@dimen/largeMargin"
                    android:singleLine="true"
                    android:text="Taram"
                    android:textColor="@color/textColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginVertical="@dimen/largeMargin"
                    android:background="@color/lightGreyColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:text="@string/education"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:background="@drawable/round_button_unselected"
                    android:hint="@string/your_dob"
                    android:padding="@dimen/normalPadding"
                    android:paddingStart="@dimen/largeMargin"
                    android:singleLine="true"
                    android:text="Москва, МГУ"
                    android:textColor="@color/textColor" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:background="@drawable/round_button_unselected"
                    android:hint="@string/your_dob"
                    android:padding="@dimen/normalPadding"
                    android:paddingStart="@dimen/largeMargin"
                    android:singleLine="true"
                    android:text="Бакалавр"
                    android:textColor="@color/textColor" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:layout_marginBottom="@dimen/largeMargin"
                    android:background="@drawable/round_button_unselected"
                    android:hint="@string/your_dob"
                    android:padding="@dimen/normalPadding"
                    android:paddingStart="@dimen/largeMargin"
                    android:singleLine="true"
                    android:text="2020"
                    android:textColor="@color/textColor" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>