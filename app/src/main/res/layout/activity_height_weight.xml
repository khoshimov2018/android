<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.HeightWeightActivity">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.dating.viewmodels.HeightWeightViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{viewModel::backPressed}"
                    android:padding="@dimen/mediumPadding"
                    android:src="@drawable/back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/height_weight"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/largeTextSize" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/smallMargin"
                    android:text="@string/skip"
                    android:textColor="@color/lightTextColor"
                    android:textSize="@dimen/smallTextSize" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_weight="0.8"
                    android:background="@color/colorPrimary" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_weight="0.2"
                    android:background="@color/lightGreyColor" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/normalMargin"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xLargeMargin"
                        android:text="@string/growth"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/largeTextSize" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normalMargin"
                        android:layout_gravity="end"
                        android:text="@{@string/growth_value(viewModel.growthValue)}"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/largeTextSize" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/largeMargin"
                        android:max="250"
                        android:onProgressChanged="@{viewModel::onGrowthChanged}"
                        android:progress="20" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/lineHeight"
                        android:layout_marginTop="@dimen/largeMargin"
                        android:background="@color/lightGreyColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xLargeMargin"
                        android:text="@string/weight"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/largeTextSize" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normalMargin"
                        android:layout_gravity="end"
                        android:text="@{@string/weight_value(viewModel.weightValue)}"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/largeTextSize" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/largeMargin"
                        android:layout_marginBottom="@dimen/largeMargin"
                        android:max="250"
                        android:onProgressChanged="@{viewModel::onWeightChanged}"
                        android:progress="20" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/xLargeMargin"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:layout_marginBottom="@dimen/normalMargin"
                    android:background="@drawable/round_button_background"
                    android:onClick="@{viewModel::moveFurther}"
                    android:text="@string/further"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>

        <include
            layout="@layout/common_loader"
            app:isVisible="@{viewModel.loaderVisible}" />
    </RelativeLayout>
</layout>